<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="167dp"
        android:layout_y="609dp"
        android:ems="10"
        android:inputType="number"
        android:text="הזן סכום" />

    <TextureView
        android:id="@+id/textureView2"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_x="-2dp"
        android:layout_y="687dp"
        android:scrollbarThumbHorizontal="@drawable/bg" />

    <Button

        android:id="@+id/charge"
        style="@android:style/Widget.Holo.Light.Button.Inset"
        android:layout_width="109dp"
        android:layout_height="64dp"
        android:layout_x="38dp"

        android:layout_y="597dp"
        android:background="@drawable/bg"
        android:fontFamily="sans-serif-condensed-medium"
        android:scrollbarTrackHorizontal="@mipmap/ic_launcher"
        android:shadowDx="10000"
        android:text="שגר כסף"
        android:textColorLink="#00BE1717" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_x="-90dp"
        android:layout_y="-4dp"
        android:gravity="center"
        android:text="Kidzcash"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="85dp"
        android:layout_height="59dp"
        android:layout_x="234dp"
        android:layout_y="32dp"
        app:srcCompat="@drawable/fgh" />

    <ImageView
        android:id="@+id/imageView"
        app:srcCompat="@drawable/kc"
        android:layout_width="91dp"
        android:layout_height="61dp"
        android:layout_x="293dp"
        android:layout_y="32dp" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="344dp"
        android:layout_height="101dp"
        android:layout_x="51dp"
        android:layout_y="161dp"
        android:text="ברוך שובך"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="341dp"
        android:layout_height="78dp"
        android:layout_x="62dp"
        android:layout_y="251dp"
        android:text="בחרו פעולה"
        android:textColor="#FD053F"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="215dp"
        android:layout_height="167dp"
        android:layout_x="120dp"
        android:layout_y="385dp"
        app:srcCompat="@drawable/hi" />

</AbsoluteLayout>